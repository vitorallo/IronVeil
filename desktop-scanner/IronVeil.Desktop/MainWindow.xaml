<Window x:Class="IronVeil.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IronVeil.Desktop"
        mc:Ignorable="d"
        Title="IronVeil Identity Security Scanner" 
        Height="700" Width="950"
        MinHeight="650" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    
    <Window.Resources>
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1E293B"/>
        </Style>
        
        <Style x:Key="SubHeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
        
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CBD5E1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#64748B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#475569"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Background="White" Padding="30,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="IronVeil" Style="{StaticResource HeaderTextStyle}"/>
                    <TextBlock Text="Identity Security Scanner" Style="{StaticResource SubHeaderTextStyle}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Backend:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#64748B"/>
                    <ComboBox Name="BackendSelector" Width="250" Height="35" VerticalContentAlignment="Center">
                        <ComboBoxItem IsSelected="True">ironveil.crimson7.io (Community)</ComboBoxItem>
                        <ComboBoxItem>Enterprise Backend</ComboBoxItem>
                        <ComboBoxItem>Custom Backend...</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- System Requirements Status -->
                <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="System Status" FontWeight="SemiBold" FontSize="16" Foreground="#1E293B"/>
                            <Button Grid.Column="1" Name="RefreshStatusButton" Content="Refresh" 
                                    Width="80" Height="25" FontSize="12"
                                    Click="RefreshStatusButton_Click"/>
                        </Grid>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Left column - PowerShell and Domain Status -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Width="8" Height="8" Name="PowerShellStatusIndicator" Fill="#94A3B8"/>
                                    <TextBlock Grid.Column="1" Name="PowerShellStatusText" Text="PowerShell: Checking..." FontSize="13" Foreground="#64748B"/>
                                </Grid>
                                
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Width="8" Height="8" Name="DomainStatusIndicator" Fill="#94A3B8"/>
                                    <TextBlock Grid.Column="1" Name="DomainStatusText" Text="Domain: Checking..." FontSize="13" Foreground="#64748B"/>
                                </Grid>
                                
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Ellipse Grid.Column="0" Width="8" Height="8" Name="AdminStatusIndicator" Fill="#94A3B8"/>
                                    <TextBlock Grid.Column="1" Name="AdminStatusText" Text="Admin Rights: Checking..." FontSize="13" Foreground="#64748B"/>
                                </Grid>
                            </StackPanel>
                            
                            <!-- Right column - Domain Selection -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Target Domain:" Margin="0,0,0,5" FontSize="13" Foreground="#64748B"/>
                                <ComboBox Name="DomainSelector" IsEnabled="False">
                                    <ComboBoxItem>No domains available</ComboBoxItem>
                                </ComboBox>
                                <TextBlock Name="DomainInfoText" Text="" FontSize="11" Foreground="#94A3B8" Margin="0,5,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Issues/Warnings Panel -->
                        <Border Name="SystemIssuesPanel" Background="#FEF2F2" CornerRadius="5" Padding="10" Margin="0,10,0,0" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock Text="System Requirements Issues:" FontWeight="SemiBold" FontSize="12" Foreground="#991B1B" Margin="0,0,0,5"/>
                                <ItemsControl Name="SystemIssuesList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontSize="11" Foreground="#DC2626" Margin="10,2,0,2" TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
                
                <!-- Authentication Status -->
                <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="15" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Ellipse Grid.Column="0" Width="12" Height="12" Margin="0,0,10,0">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <Setter Property="Fill" Value="#EF4444"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsAuthenticated}" Value="True">
                                            <Setter Property="Fill" Value="#10B981"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Name="AuthStatusText" Text="Not Authenticated" FontWeight="SemiBold" Foreground="#1E293B"/>
                            <TextBlock Name="AuthUserText" Text="Please login to continue" FontSize="12" Foreground="#94A3B8"/>
                        </StackPanel>
                        
                        <Button Grid.Column="2" Name="LoginButton" Content="Login" 
                                Style="{StaticResource PrimaryButton}" 
                                Width="100"
                                Click="LoginButton_Click"/>
                    </Grid>
                </Border>
                
                <!-- Scan Configuration and Actions -->
                <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Scan Configuration" FontWeight="SemiBold" FontSize="16" Foreground="#1E293B" Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <CheckBox Name="ScanADCheckbox" Content="Active Directory" IsChecked="True" Margin="0,5"/>
                                <CheckBox Name="ScanEntraCheckbox" Content="Microsoft Entra ID" IsChecked="True" Margin="0,5"/>
                                <CheckBox Name="ScanHybridCheckbox" Content="Hybrid Identity Correlation" IsChecked="True" Margin="0,5"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Scan Depth:" Margin="0,0,0,5" Foreground="#64748B"/>
                                <ComboBox Name="ScanDepthSelector" SelectedIndex="1">
                                    <ComboBoxItem>Quick (Essential checks only)</ComboBoxItem>
                                    <ComboBoxItem>Standard (Recommended)</ComboBoxItem>
                                    <ComboBoxItem>Deep (All security checks)</ComboBoxItem>
                                </ComboBox>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Action Buttons -->
                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Button Grid.Column="1" Name="StartScanButton" 
                                    Content="Start Security Scan" 
                                    Style="{StaticResource PrimaryButton}"
                                    Margin="0,0,10,0"
                                    Width="180"
                                    Height="38"
                                    IsEnabled="False"
                                    Click="StartScanButton_Click"/>
                            
                            <Button Grid.Column="2" Name="OpenDashboardButton" 
                                    Content="Open Dashboard" 
                                    Style="{StaticResource SecondaryButton}"
                                    Width="140"
                                    Height="38"
                                    IsEnabled="False"
                                    Click="OpenDashboardButton_Click"/>
                            
                        </Grid>
                        
                        <!-- Scan Progress (shown during scan) -->
                        <StackPanel Name="ProgressPanel" Visibility="Collapsed" Margin="0,15,0,0">
                            <ProgressBar Name="ScanProgressBar" Height="6" Maximum="100" Value="0" Margin="0,0,0,5"/>
                            <TextBlock Name="ProgressStatusText" Text="Initializing scanner..." 
                                     HorizontalAlignment="Center" FontSize="12" Foreground="#64748B"/>
                            <TextBlock Name="ProgressDetailsText" Text="" 
                                     HorizontalAlignment="Center" FontSize="11" Foreground="#94A3B8" Margin="0,2,0,0"/>
                        </StackPanel>
                        
                        <!-- Scan Results Summary (shown after scan) -->
                        <Grid Name="ResultsPanel" Visibility="Collapsed" Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Background="#FEF2F2" CornerRadius="5" Padding="10" Margin="0,0,5,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="0" Name="CriticalCount" FontSize="20" FontWeight="Bold" Foreground="#DC2626" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Critical" FontSize="11" Foreground="#7F1D1D" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="1" Background="#FFF7ED" CornerRadius="5" Padding="10" Margin="5,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="0" Name="HighCount" FontSize="20" FontWeight="Bold" Foreground="#EA580C" HorizontalAlignment="Center"/>
                                    <TextBlock Text="High" FontSize="11" Foreground="#7C2D12" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="2" Background="#FEF3C7" CornerRadius="5" Padding="10" Margin="5,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="0" Name="MediumCount" FontSize="20" FontWeight="Bold" Foreground="#F59E0B" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Medium" FontSize="11" Foreground="#78350F" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="3" Background="#F0FDF4" CornerRadius="5" Padding="10" Margin="5,0,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="0" Name="LowCount" FontSize="20" FontWeight="Bold" Foreground="#22C55E" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Low" FontSize="11" Foreground="#14532D" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        
                        <!-- Welcome/Idle View (default) -->
                        <StackPanel Name="WelcomePanel" Margin="0,15,0,0">
                            <TextBlock Text="Ready to scan your identity infrastructure" 
                                     HorizontalAlignment="Center" FontSize="13" Foreground="#64748B"/>
                        </StackPanel>
                        
                        <!-- Export Results (hidden by default) -->
                        <Button Name="ExportResultsButton" 
                                Content="Export Results" 
                                Visibility="Collapsed"
                                Click="ExportResultsButton_Click"/>
                        
                        <!-- Top Findings List (hidden by default) -->
                        <ListBox Name="FindingsList" Visibility="Collapsed" BorderThickness="0" MaxHeight="0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#1E293B" Padding="15,8">
            <Grid>
                <TextBlock Name="StatusBarText" 
                         Text="Ready" 
                         Foreground="White" 
                         FontSize="12"
                         HorizontalAlignment="Left"/>
                <TextBlock Name="VersionText" 
                         Text="v1.0.0" 
                         Foreground="#94A3B8" 
                         FontSize="12"
                         HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Window>